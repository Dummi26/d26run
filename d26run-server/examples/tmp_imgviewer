allow anyone

# used by my screenshot script. this is the default if no image is specified.
var IMG /tmp/screenshot.png

command d26run
args_clear
arg_add --
# some image viewer
arg_add nomacs
# the image file (see var)
# this could also be IMG.png (it uses a basic string.replace(IMG, <value>), so be careful with variable names!)
arg_add IMG

user_inherit
group_inherit

env_inherit PATH
env_inherit DISPLAY=:0

# d26run-client run tmp_imgviewer IMG=<path_to_img>
# -> open a certain image file (overwrites the default /tmp/screenshot.png)
